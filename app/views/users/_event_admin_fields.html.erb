<div class="nested-fields">
  <div class="jumbotron jumbotron-fluid" style="padding: 15px;">

    <%= f.hidden_field :_destroy %>
    <div class="form-row">
      <div class="form-group col-md-12">
        <%= f.label :"event_id", class: "control-label" %>
        <%= f.collection_select :event_id, Event.all,:id,:event_dropdown, {include_blank: "Choose..."}, {class: 'form-control', required: true} %>
      </div>
      <div class="form-group col-md-12">
        <%= f.label :"User may edit Event", class: "control-label" %>
        <%= f.select(:status, ['disabled', 'enabled'], {include_blank: "Choose..."}, { :class => 'form-control' }) %>
      </div>
    </div>
    <div>
      <div class="row justify-content-left">
        <div class="col-3">
          <%= link_to "Remove", '#', class: "remove_fields btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
