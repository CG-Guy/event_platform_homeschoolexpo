<div class="nested-fields">
  <div class="jumbotron jumbotron-fluid" style="padding: 15px;">
    <%= f.hidden_field :_destroy %>
    <div class="form-row">
      <div class="form-group col-md-12">
        <%= f.label :"company_id", class: "control-label" %>
        <%= f.collection_select :company_id, Company.all,:id,:company_event_dropdown, {include_blank: "Choose..."}, {class: 'form-control', required: true} %>
      </div>
      <div class="form-group col-md-12">
        <%= f.label :"User may edit exhibition", class: "control-label" %>
        <%= f.select(:status, ['disabled', 'enabled'], {include_blank: "Choose..."}, { :class => 'form-control' }) %>
      </div>
    </div>
    <div>
      <div class="row justify-content-left">
        <div class="col-12">
          <%= link_to "Remove", '#', class: "remove_fields btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
