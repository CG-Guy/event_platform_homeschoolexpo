<% content_for :banner_content do %>
<%= render 'layouts/banner_workshop', event: @event %>
<% end %>

<% content_for :event_navbar do %>
<%= render 'layouts/event_navbar', event: @event %>
<% end %>

<% content_for :page_title do %>
  <title><%= "#{@event.name} - workshops - #{@workshop.title}" %> </title>
<% end %>

<div class="banner">
  <div class="mx-auto">
    <h1>Workshop</h1>
    <h2><%= @workshop.title %></h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col"><%= link_to 'Back', event_workshops_path(@event), class: "btn btn-secondary btn-lg" %>
    </div>
  </div>
</div>

<div class="container">
  <%= form_with(url:  event_workshop_rating_path(@event, @workshop), method: "post", remote: true) do |form| %>

  <div class="container " style="margin-top:30px">
    <div class="stars">
      <label class="rate">
        <input type="radio" name="radio1" id="1" value="1" onchange="this.form.submit();">
        <div class="face"></div>
        <i class="far fa-star star one-star"></i>
      </label>
      <label class="rate">
        <input type="radio" name="radio1" id="2" value="2" onchange="this.form.submit();">
        <div class="face"></div>
        <i class="far fa-star star two-star"></i>
      </label>
      <label class="rate">
        <input type="radio" name="radio1" id="3" value="3" onchange="this.form.submit();">
        <div class="face"></div>
        <i class="far fa-star star three-star"></i>
      </label>
      <label class="rate">
        <input type="radio" name="radio1" id="4" value="4" onchange="this.form.submit();">
        <div class="face"></div>
        <i class="far fa-star star four-star"></i>
      </label>
      <label class="rate">
        <input type="radio" name="radio1" id="5" value="5" onchange="this.form.submit();">
        <div class="face"></div>
        <i class="far fa-star star five-star"></i>
      </label>
      <% if @average_rating > 0 %>
      Avg Rating: <%= @average_rating %>
      <% end %>
    </div>
  </div>
  <% end %>

  <% if notice %>
  <div class="alert alert-success" role="alert">
    <h4><%= notice %></h4>
  </div>
  <% end %>
  <hr>
  <!-- <%= link_to 'Zoom Session', @workshop.zoom_config&.join_url, target: "_blank" %> -->

  <div class="container">
    <% if notice %>
    <div class="alert alert-success" role="alert">
      <h4><%= notice %></h4>
    </div>
    <% end %>

    <div class="card-columns">
      <div class="card">
        <div class="card-body">
          <h2><%= "About the Workshop topic" %></h2>
          <br>
          <%= @workshop.about %>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h2>Enter Workshop</h2>
          <%= @workshop.enter_workshop %>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h2>Meet <%= @workshop.facilitator %></h2>
          <br>
          <%= @workshop.workshop_facilitator_info %>
        </div>
      </div>
     
      <div class="card-columns">
        <% @workshop.information_blocks.each do |info_block| %>
        <div class="card" style="width: 608px;">
          <div class="card-body" style="width: 600px;">
            <h2 class="card-title" style="width: 608px;"><%= info_block.title%></h2>
            <p class="card-text " style="width: 608px;"><%= info_block.about %><br></p>
          </div>
        </div>
        <% end %>
      </div>
      
    </div>
  </div>
  <div class="col"><%= link_to 'Back', event_workshops_path(@event), class: "btn btn-secondary btn-lg" %>
  </div>
</div>



