<div class="row mt-4 justify-content-center">
  <% @workshop.information_blocks.each do |info_block| %>
  <div class="card mb-3" style="width: 500px; height: 250px;">
    <div class="row no-gutters">
      <div class="row no-gutters">
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= info_block.title%></h5>
            <p class="presentations-card"><%= info_block.description %></p>
          </div>
        </div>
      </div>
      <p class="card-text"><%= info_block.about %></p>
    </div>
  </div>
  <% end %>
</div>