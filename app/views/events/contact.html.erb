<% content_for :event_navbar do %>
<%= render 'layouts/event_navbar', event: @event %>
<% end %>
<% content_for :page_title do %>
  <title><%= "#{@event.name} - contact" %> </title>
<% end %>

<div class="banner">
  <div class="mx-auto">
    <h1>Info Desk & Contact</h1>
    <h2><%= @event.name %></h2>
  </div>
</div>
<div class="container">
  <%= @event.info_desk %>
</div>

<div class="container">
  <h1>Anytime Enquiries</h1>
  <div class="row">
    <div class="col-lg-8 col-md-12">
      <%= form_with(url: send_message_event_path, method: "post", local: true) do |form| %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: 'form-control', placeholder: :first_name %>
        </div>
        <div class="form-group col-md-6">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: 'form-control', placeholder: :last_name%>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= form.label :contact_number%>
          <%= form.telephone_field :contact_number, class: 'form-control', placeholder: :contact_number%>
        </div>
        <div class="form-group col-md-6">
          <%= form.label :email%>
          <%= form.email_field :email, class: 'form-control', placeholder: :email %>
        </div>
      </div>
      <br>
      <div class="form-row">
        <div class="form-group col-md-12">
          <%= form.label :topic %>
          <%= form.select(:topic, ['Exhibit', 'Sponsor', 'Payment', 'Other'], {include_blank: "Choose..."}, { :class => 'form-control' }) %>
        </div>
      </div>
      <br>
      <div class="form-row">
        <div class="form-group col-md-12">
          <%= form.label :message %>
          <%= form.text_area :message, class: 'form-control', placeholder: :message %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= link_to 'Back', event_path(@event), class: "btn btn-secondary btn-lg", data: { confirm: 'Are you sure you want to go back?' } %>
        </div>
        <div class="col-auto">
          <%= form.submit :Submit, class: "btn btn-primary btn-lg" %>
        </div>
      </div>

      <% end %>
    </div>
    <div class="col-lg-4 col-md-12">
      <div class="aos-init aos-animate" data-aos="fade" data-aos-delay="100">
        <div class="col-lg-4">
          <h3 class="h5 text-black mb-3">Phone</h3>
          <p class="mb-4"><%= @event.phone %></p>
          <h3 class="h5 text-black mb-3">Email Address</h3>
          <p class="mb-0"></a><%= @event.email %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'chatra_event' %>