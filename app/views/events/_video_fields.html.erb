<div class="nested-fields">
    <div class="jumbotron jumbotron-fluid" style="padding: 15px;">
        <%= f.hidden_field :_destroy %>
        <div class="form-row">
            <div class="form-group col-md-12">
            <%= f.label :"Video Type (Before, During or After Event)", class: "control-label" %>
            <%= f.select(:video_type, [['Before Event', "before_event"], ['During Event', "during_event"], ['After Event', "after_event"]], {include_blank: "Select Video Type..."}, { :class => 'form-control'}) %>
            </div>
          </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <%= f.label :title, class: "control-label" %>
                <%= f.text_field :title, class: 'form-control', placeholder: :title  %>
            </div>
            <div class="form-group col-md-6">
                <%= f.label :description %>
                <%= f.text_field :description, class: 'form-control', placeholder: :description %>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <%= f.label :'Youtube Video ID', class: "control-label" %>
                <%= f.text_field :path, class: 'form-control', placeholder: :'Youtube Video ID'  %>
            </div>
        </div>
        <div>
            <div class="row justify-content-left">
                <div class="col-3">
                    <%= link_to "Remove", '#', class: "remove_fields btn btn-danger" %>
                </div>
            </div>
        </div>
    </div>
</div>