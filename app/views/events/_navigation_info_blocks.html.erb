<div class="row justify-content-center">
  <% if !user_signed_in? %>
  <div class="col-md-3">
    <div class="content"> <a href="<%= who_should_attend_event_path(event) %>">
        <div class="content-overlay"></div>
        <% if @event.who_should_attend_image.attached? %>
        <%= image_tag event.who_should_attend_image.variant(resize_to_fill: [500, 500, { gravity: 'center' }]), class: "content-image" %>
        <% else %>
        <%= image_tag asset_path('400.png'), class: "content-image" %>
        <% end %>
        <div class="content-details fadeIn-bottom">
          <h3 class="content-title">Who should attend?</h3>
        </div>
      </a>
    </div>
  </div>
  <% end %>
  <div class="col-md-3">
    <div class="content"> <a href="<%= event_presentations_path(event) %>">
        <div class="content-overlay"></div>
        <% if @event.presentation_image.attached? %>
