<% content_for :event_navbar do %>
<%= render 'layouts/event_navbar', event: @event %>
<% end %>
<div class="banner">
  <div class="mx-auto">
    <h2><%= @event.name %></h2>
  </div>
</div>
<div class="container">
  <%= @event.who_should_attend %>
  <hr>
  <div class="row">
    <div class="col pull-left"><%= link_to 'Back', event_path(@event), class: "btn btn-secondary btn-lg" %></div>
  </div>
</div>


