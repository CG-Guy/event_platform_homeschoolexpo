<div class="nested-fields">
  <div class="jumbotron jumbotron-fluid" style="padding: 15px;">
      <%= f.hidden_field :_destroy %>
      <div class="form-row">
          <div class="form-group col-md-6">
              <%= f.label :'User Description' %>
              <%= f.text_field :value, class: 'form-control', placeholder: :'What describes you?' %>
          </div>
      </div>
      <div>
          <div class="row justify-content-left">
              <div class="col-3">
                  <%= link_to "Remove", '#', class: "remove_fields btn btn-danger" %>
              </div>
          </div>
      </div>
  </div>
</div>