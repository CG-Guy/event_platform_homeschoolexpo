

<div class="container">
  <br>
<h1>FAQ:</h1>
<br>
<div class="accordion" id="accordionFAQ">
  <% @faqs.each do |faq| %>
  <div class="card">
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#question-<%= faq.id %>" aria-expanded="true" aria-controls="question-<%= faq.id %>">
          <%= faq.question %>
        </button>
      </h2>
    </div>

    <div id="question-<%= faq.id %>" class="collapse hide" aria-labelledby="heading-<%= faq.id %>" data-parent="#accordionFAQ">
      <div class="card-body">
        <%= faq.answer %>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
