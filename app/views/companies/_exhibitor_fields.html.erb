<div class="nested-fields">
    <div class="jumbotron jumbotron-fluid" style="padding: 15px;">

        <%= f.hidden_field :_destroy %>
        <div class="form-row">
            <div class="form-group col-md-6">
                <%= f.label :name, class: "control-label" %>
                <%= f.text_field :name, class: 'form-control', placeholder: :name  %>
            </div>
            <div class="form-group col-md-6">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: 'form-control', placeholder: :last_name %>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <%= f.label :email, class: "control-label" %>
                <%= f.email_field :email, class: 'form-control', placeholder: :email  %>
            </div>
            <div class="form-group col-md-6">
                <%= f.label :phone, class: "control-label" %>
                <%= f.phone_field :phone, class: 'form-control', placeholder: :phone  %>
            </div>
        </div>
        <div class="row justify-content-left">
            <div class="col-3">
                <%= link_to "Remove", '#', class: "remove_fields btn btn-danger" %>
            </div>
        </div>
    </div>
</div>