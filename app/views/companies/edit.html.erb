<% content_for :event_navbar do %>
<%= render 'layouts/event_navbar', event: @company.event %>
<% end %>
<% content_for :social_links do %>
<%= render 'events/social_links', event: @event %>
<% end %>

<% content_for :page_title do %>
  <title><%= "#{@event.name} - exhibitors - #{@company.name} - edit" %> </title>
<% end %>

<div class="banner">
  <div class="mx-auto">
    <h1><%= @company.name %></h1>
    <h2>Manage Stall</h2>
  </div>
</div>
<div class="container">
  <%= form_with(url: event_company_assist_path(@company.event, @company), method: "post", remote: true) do |form| %>
  <div class="container " style="margin-top:30px">
    <div class="col-auto">
      <b>Click HERE when you have finished setting up your stall in order for the event organizers to evaluate your stall for completeness. </b>
      <%= form.submit :Submit, class: "btn btn-primary btn-lg", value: "Ready to Review", name: "assist_button" %>
    </div>
  </div>
  <% end %>
  <hr>
  <%= render 'form', company: @company, url: event_company_path(@company.event, @company), method: :patch, back_path: event_company_path(@company.event, @company) %>
  <hr>
</div>