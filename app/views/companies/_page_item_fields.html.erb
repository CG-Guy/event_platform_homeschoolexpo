<div class="nested-fields">
  <div class="jumbotron jumbotron-fluid" style="padding: 15px;">

    <%= f.hidden_field :_destroy %>
    <%= f.hidden_field :reference, value: 'photo_tab' %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :image, class: "control-label" %>
        <%= f.file_field :image, class: "control-label" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :title, class: "control-label" %>
        <%= f.text_field :title, class: 'form-control', placeholder: :title  %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :title_secondary, class: "control-label" %>
        <%= f.text_field :title_secondary, class: 'form-control', placeholder: :title_secondary  %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :description, class: "control-label" %>
        <%= f.text_area :description, class: 'form-control', placeholder: :description  %>
      </div>
    </div>
    <div>
      <div class="row justify-content-left">
        <div class="col-3">
          <%= link_to "Remove", '#', class: "remove_fields btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>