<div class="card mb-3" style="width: 500px; height: 267px; background-color: #098cff17;">
  <div id="carouselExampleControls-<%= type %>" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% resource.advertisements.each_with_index do |advertisement, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <%= image_tag advertisement.image.variant(resize_to_fill: [400, 200]), class: "d-block w-100", alt: advertisement.title %>
      </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls-<%= type %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls-<%= type %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>