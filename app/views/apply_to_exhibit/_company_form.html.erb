<%= form_with(model: company, url: create_company_for_event_path , method: "post", local: true) do |form| %>
<% if company.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4><%= pluralize(company.errors.count, "error") %> prohibited company user from being saved:</h4>
  <hr>
  <p class="mb-0">
  <ul>
    <% company.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  </p>
</div>
<% end %>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :company_name %>
    <%= form.text_field :company_name, class: 'form-control', placeholder: :company_name, required: true%>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :company_description %>
    <%= form.text_field :company_description, class: 'form-control', placeholder: :company_description, required: true%>
  </div>
</div>
<div class="row">
  <div class="col"><%= link_to 'Back', event_path(@event), class: "btn btn-secondary btn-lg" %></div>
  <div class="col-auto"><%= form.submit :Submit, class: "btn btn-primary btn-lg" %></div>
</div>
<% end %>

