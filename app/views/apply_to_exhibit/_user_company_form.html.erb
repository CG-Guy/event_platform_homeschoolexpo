<%= form_with(model: @user, url: create_user_and_company_for_event_path , method: "post", local: true) do |form| %>
<% if @user.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
  <hr>
  <p class="mb-0">
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  </p>
</div>
<% end %>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :name, class: "control-label" %>
    <%= form.text_field :name, class: 'form-control', placeholder: :name, required: true %>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-control', placeholder: :last_name, required: true%>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :email, class: "control-label" %>
    <%= form.email_field :email, class: 'form-control', placeholder: :email, required: true %>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :phone, class: "control-label" %>
    <%= form.phone_field :phone, class: 'form-control', placeholder: :phone, required: true %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', placeholder: :password, required: true%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :'What describes you:' %>
    <%= form.select(:description, ['Parent', 'Grandparent', 'Student', 'Blogger' , 'Company' ], {include_blank: "Choose..."}, { :class => 'form-control' }) %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= form.label :country %>
    <select id="country" class="form-control">
      <option value="-1">
        Please Select...
      </option>
      <% CS.get.each do |key, value| %>
      <option value="<%= key %>">
        <%= value %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group col-md-4">
    <%= form.label :'State/Province' %>
    <select id="province" class="form-control">
    </select>
  </div>
  <div class="form-group col-md-4">
    <%= form.label :city %>
    <select id="city" class="form-control">
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :company_name %>
    <%= form.text_field :company_name, class: 'form-control', placeholder: :company_name, required: true%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :company_email %>
    <%= form.text_field :company_email, class: 'form-control', placeholder: :company_email, required: true%>
  </div>
</div>
<br>
<div class="row">
  <div class="col"><%= link_to 'Back', event_path(@event), class: "btn btn-secondary btn-lg" %></div>
  <div class="col-auto"><%= form.submit :Submit, class: "btn btn-primary btn-lg" %></div>
</div>
<% end %>