<%= form_with(model: user, url:  create_register_to_host_path , method: "post", local: true) do |form| %>
<% if user.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h4>
  <hr>
  <p class="mb-0">
  <ul>
    <% user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  </p>
</div>
<% end %>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :name, class: "control-label" %>
    <%= form.text_field :name, class: 'form-control', placeholder: :name, required: true %>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-control', placeholder: :last_name, required: true%>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :email, class: "control-label" %>
    <%= form.email_field :email, class: 'form-control', placeholder: :email, required: true %>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :phone, class: "control-label" %>
    <%= form.phone_field :phone, class: 'form-control', placeholder: :phone, required: true %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', placeholder: :password, required: true%>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-4">
    <%= form.label :country%>
    <select id="country" class="form-control">
      <option value="-1">
        Please Select...
      </option>
      <% CS.get.each do |key, value| %>
      <option value="<%= key %>">
        <%= value %>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group col-md-4">
    <%= form.label :'State/Province' %>
    <select id="province" class="form-control">
    </select>
  </div>
  <div class="form-group col-md-4">
    <%= form.label :city %>
    <select id="city" class="form-control">
    </select>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :event_name %>
    <%= form.text_field :event_name, class: 'form-control', placeholder: :event_name, required: true%>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :event_description %>
    <%= form.text_field :event_description, class: 'form-control', placeholder: :event_description, required: true%>
  </div>
</div>

<%= form.submit :Apply, class: "btn btn-primary" %>
<% end %>